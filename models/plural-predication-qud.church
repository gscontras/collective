                                            ( 575 818 818 1061  )
                                            ( 818 818 818 818 )
                                            ( 575 575 818 1331  )
                                            ( 575 575 575 1600  )
                                            ( 575 818 1061  1061  )
                                            ( 818 818 818 1061  )
                                            ( 575 575 1061  1331  )
                                            ( 575 818 818 1331  )
                                            ( 575 575 818 1600  )
                                            ( 575 1061  1061  1061  )
                                            ( 818 818 1061  1061  )
                                            ( 575 818 1061  1331  )
                                            ( 818 818 818 1331  )
                                            ( 575 575 1061  1600  )
                                            ( 575 818 818 1600  )
                                            ( 575 575 1331  1331  )
                                            ( 818 1061  1061  1061  )
                                            ( 575 1061  1061  1331  )
                                            ( 818 818 1061  1331  )
                                            ( 575 818 1061  1600  )
                                            ( 818 818 818 1600  )
                                            ( 575 818 1331  1331  )
                                            ( 575 575 1331  1600  )
                                            ( 1061  1061  1061  1061  )
                                            ( 818 1061  1061  1331  )
                                            ( 575 1061  1061  1600  )
                                            ( 818 818 1061  1600  )
                                            ( 575 1061  1331  1331  )
                                            ( 818 818 1331  1331  )
                                            ( 575 818 1331  1600  )
                                            ( 575 575 1600  1600  )
                                            ( 1061  1061  1061  1331  )
                                            ( 818 1061  1061  1600  )
                                            ( 818 1061  1331  1331  )
                                            ( 575 1061  1331  1600  )
                                            ( 818 818 1331  1600  )
                                            ( 575 1331  1331  1331  )
                                            ( 575 818 1600  1600  )
                                            ( 1061  1061  1061  1600  )
                                            ( 1061  1061  1331  1331  )
                                            ( 818 1061  1331  1600  )
                                            ( 818 1331  1331  1331  )
                                            ( 575 1061  1600  1600  )
                                            ( 818 818 1600  1600  )
                                            ( 575 1331  1331  1600  )
                                            ( 1061  1061  1331  1600  )
                                            ( 1061  1331  1331  1331  )
                                            ( 818 1061  1600  1600  )
                                            ( 818 1331  1331  1600  )
                                            ( 575 1331  1600  1600  )
                                            ( 1061  1061  1600  1600  )
                                            ( 1061  1331  1331  1600  )
                                            ( 1331  1331  1331  1331  )
                                            ( 818 1331  1600  1600  )
                                            ( 575 1600  1600  1600  )
                                            ( 1061  1331  1600  1600  )
                                            ( 1331  1331  1331  1600  )
                                            ( 818 1600  1600  1600  )
                                            ( 1061  1600  1600  1600  )
                                            ( 1331  1331  1600  1600  )
                                            ( 1331  1600  1600  1600  )
                                            ( 1600  1600  1600  1600  )
                                           )))

     ;; Prior on theta
     (define (dist-theta-prior) (apply multinomial object-prior))
     (define (coll-theta-prior) ; possible summation of four objects
       (uniform-draw 
        '(
          2300
          2543
          2786
          2786
